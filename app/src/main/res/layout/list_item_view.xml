<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5sp"
    android:layout_marginTop="5sp"
    android:layout_marginEnd="5sp"
    android:layout_marginBottom="5sp"
    android:backgroundTint="#FFFBE6"
    app:cardCornerRadius="12dp"
    app:cardElevation="12dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/colored_borders">

    <ImageView
        android:id="@+id/_image_item"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars"
        app:shapeAppearanceOverlay="@style/customRoundedImageView"/>
    <TextView
        android:id="@+id/_text_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/moscow_manors"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeStepGranularity="1sp"
        android:layout_below="@id/_image_item"
        android:textStyle="bold"
        android:background="@color/pink100"
        android:textColor="#FD5523"/>
</RelativeLayout>


</androidx.cardview.widget.CardView>